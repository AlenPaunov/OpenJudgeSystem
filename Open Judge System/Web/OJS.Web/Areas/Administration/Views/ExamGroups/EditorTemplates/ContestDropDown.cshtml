@using Resource = Resources.Areas.Administration.Contests.Views.EditorTemplates.ContestDropDown

@model int?

@(Html
    .Kendo()
    .ComboBoxFor(m => m)
    .DataValueField("Id")
    .DataTextField("Name")
    .Filter(FilterType.Contains)
    .MinLength(2)
    .Placeholder(Resource.Select_contest)
    .DataSource(data =>
    {
        data
            .ServerFiltering(true)
            .Read(read => read.Action("GetAvailableContestsContaining", "LecturersKendoRemoteData").Data("filterContests"));
    })
    .AutoBind(false)
    .HtmlAttributes(new { style = "width:100%", data_value_primitive = "true" }))