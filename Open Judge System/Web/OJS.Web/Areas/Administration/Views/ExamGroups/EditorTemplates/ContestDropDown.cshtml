@using Resource = Resources.Areas.Administration.Contests.Views.EditorTemplates.ContestDropDown

@model string

@(Html
    .Kendo()
    .ComboBoxFor(m => m)
    .Filter(FilterType.Contains)
    .Placeholder(Resource.Select_contest)
    .DataTextField("Text")
    .DataValueField("Value")
    .DataSource(data =>
    {
        data.ServerFiltering(true)
            .Read(read => read.Action("GetContests", "ExamGroups").Data("filterContests"));
    })
    .HtmlAttributes(new { style = "width:100%" }))