@using Resource = Resources.Areas.Administration.Contests.Views.EditorTemplates.ContestDropDown

@model int?

@(Html
    .Kendo()
    .ComboBoxFor(m => m)
    .DataTextField("Text")
    .DataValueField("Value")
    .Filter(FilterType.Contains)
    .Placeholder(Resource.Select_contest)
    .DataSource(data =>
    {
        data
            .ServerFiltering(true)
            .Read(read => read.Action("GetAvailableContests", "ExamGroups").Data("filterContests"));
    })
    .HtmlAttributes(new { style = "width:100%" }))