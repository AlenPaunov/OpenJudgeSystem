@model OJS.Web.Areas.Administration.ViewModels.Problem.CopyProblemViewModel

@using OJS.Web.Areas.Administration.Controllers
@using SharedResource = Resources.Areas.Administration.Shared.Views.Partials.Partials

@using (Html.BeginForm<ProblemsController>(
    c => c.CopyTo(Model.Id, Model.ContestToCopyTo, Model.ProblemGroupToCopyTo),
    FormMethod.Post,
    new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.ContestToCopyTo, new { @class = "control-label" })

        <div>
            @Html.EditorFor(m => m.ContestToCopyTo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ContestToCopyTo)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ProblemGroupToCopyTo, new { @class = "control-label" })

        <div>
            @Html.EditorFor(m => m.ProblemGroupToCopyTo, new { @class = "form-control" })
        </div>
    </div>

    <input class="k-button pull-right top-buffer-lg" type="submit" value="@SharedResource.Copy" />
}