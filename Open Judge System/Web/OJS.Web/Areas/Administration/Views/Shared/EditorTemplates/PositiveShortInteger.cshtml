@using System.Dynamic

@model short?
    
@{
    dynamic htmlAttributes = new ExpandoObject();

    htmlAttributes.style = "width: 100%; height: 30px;";
    htmlAttributes.placeholder = "h:mm";

    if (this.ViewData.ContainsKey(WebConstants.IsDisabled) &&
        (bool)this.ViewData[WebConstants.IsDisabled])
    {
        htmlAttributes.disabled = "disabled";
    }
}

@(Html
    .Kendo()
    .NumericTextBoxFor(m => m)
    .Spinners(true)
    .Min(0)
    .Max(short.MaxValue)
    .Step(1)
    .Format("#")
    .HtmlAttributes(htmlAttributes))