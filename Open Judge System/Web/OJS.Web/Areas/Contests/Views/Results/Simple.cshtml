@model OJS.Web.Areas.Contests.ViewModels.Results.ContestResultsViewModel

@using Resource = Resources.Areas.Contests.Views.ResultsSimple

@{
    ViewBag.Title = string.Format(Resource.Title, Model.Name, Model.IsOfficialResults ? string.Empty : " (Practice)");
    ViewBag.Subtitle = Model.IsOfficialResults ? string.Empty : Resource.CachedResults;
}

@section Styles {
    <link href="/Content/Contests/results-page.css" rel="stylesheet" />
}

@section Scripts {
    <script src="/Scripts/Contests/results-pagination.js"></script>
}

<ol class="breadcrumb">
    <li><a href="/">@Resource.Home</a></li>
    <li><a href="@ContestsHelper.GetUrl(Model.Id, Model.Name)">@Model.Name</a></li>
    <li class="active">@Resource.Simple_results</li>
</ol>

<h1 class="text-center">@ViewBag.Title</h1>
<h3 class="text-center">
    @ViewBag.Subtitle
    <br />
    <br />
    @if (User.IsAdmin())
    {
        <span>@Html.ActionLink(Resource.Detailed_results, "Full", new { id = Model.Id, official = Model.IsOfficialResults }, new { @class = "btn btn-primary" })</span>
        <span>@Html.ActionLink(Resource.Export_results, "Results", "ContestsExport", new { area = "Administration", id = Model.Id, compete = Model.IsOfficialResults }, new { @class = "btn btn-primary" })</span>
    }
</h3>

@Html.Partial("_SimpleResultsPartial", Model)